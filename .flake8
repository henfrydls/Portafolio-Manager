[flake8]
# Maximum line length
max-line-length = 127

# Maximum complexity
max-complexity = 10

# Exclude patterns
exclude =
    .git,
    __pycache__,
    .venv,
    venv,
    env,
    build,
    dist,
    *.egg-info,
    .tox,
    .pytest_cache,
    migrations,
    staticfiles,
    media,
    locale,
    node_modules,
    .docker,

# Ignore specific errors
ignore =
    # E203: whitespace before ':'
    E203,
    # W503: line break before binary operator (conflicts with black)
    W503,
    # W504: line break after binary operator
    W504,
    # E501: line too long (handled by black)
    E501,

# Per-file ignores
per-file-ignores =
    __init__.py: F401, F403
    settings/*.py: E501
    */migrations/*.py: E501

# Count errors
count = True

# Show source code for each error
show-source = True

# Show statistics at the end
statistics = True

# Format output
format = default
