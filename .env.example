# =============================================================================
# PORTFOLIO CONFIGURATION
# Copy this file to .env and customize with your information
# =============================================================================

# Basic Project Settings
PROJECT_NAME=Mi Portfolio
DJANGO_SETTINGS_MODULE=config.settings.development
SECRET_KEY=your-secret-key-here-generate-a-new-one
DEBUG=True

# Domain Configuration
DOMAIN=localhost
STAGING_DOMAIN=staging.yourdomain.com
PRODUCTION_DOMAIN=yourdomain.com

# Database Configuration (optional - defaults to SQLite)
DATABASE_URL=sqlite:///db.sqlite3
# For PostgreSQL: DATABASE_URL=postgres://user:password@localhost:5432/portfolio_db
# For MySQL: DATABASE_URL=mysql://user:password@localhost:3306/portfolio_db

# Email Configuration
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-16-character-app-password
# DEFAULT_FROM_EMAIL=your-email@gmail.com  # OPCIONAL: Si no se especifica, usa EMAIL_HOST_USER automáticamente

# Contact Form Email Settings
SEND_CONTACT_CONFIRMATIONS=True  # Send confirmation emails to users who submit contact form

# =============================================================================
# EMAIL PROVIDER EXAMPLES
# =============================================================================

# Gmail (requires App Password)
# 1. Enable 2FA on your Google account
# 2. Generate App Password at: https://myaccount.google.com/apppasswords
# 3. Select "Mail" → "Other (custom name)" → "Django Portfolio"
# 4. Use the 16-character password below (without spaces)
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USE_TLS=True
# EMAIL_HOST_USER=your-email@gmail.com
# EMAIL_HOST_PASSWORD=your-16-character-app-password

# Outlook/Hotmail
# EMAIL_HOST=smtp-mail.outlook.com
# EMAIL_PORT=587
# EMAIL_USE_TLS=True

# Yahoo Mail
# EMAIL_HOST=smtp.mail.yahoo.com
# EMAIL_PORT=587
# EMAIL_USE_TLS=True

# Custom SMTP Server
# EMAIL_HOST=mail.yourdomain.com
# EMAIL_PORT=587
# EMAIL_USE_TLS=True

# Security Settings
SESSION_COOKIE_AGE_DEV=604800  # 1 week for development
SESSION_COOKIE_AGE_STAGING=43200  # 12 hours for staging
SESSION_COOKIE_AGE_PROD=86400  # 24 hours for production

# Analytics (optional)
GOOGLE_ANALYTICS_ID=
GOOGLE_TAG_MANAGER_ID=

# File Upload Limits (in MB)
MAX_IMAGE_SIZE=5
MAX_DOCUMENT_SIZE=10

# Allowed Hosts (comma-separated)
ALLOWED_HOSTS_DEV=localhost,127.0.0.1,0.0.0.0
ALLOWED_HOSTS_STAGING=staging.yourdomain.com,localhost,127.0.0.1
ALLOWED_HOSTS_PROD=yourdomain.com,www.yourdomain.com

# CSRF Trusted Origins (optional - comma-separated)
CSRF_TRUSTED_ORIGINS_DEV=http://localhost:3000,http://localhost:8080
CSRF_TRUSTED_ORIGINS_STAGING=https://staging-api.yourdomain.com
CSRF_TRUSTED_ORIGINS_PROD=https://api.yourdomain.com,https://admin.yourdomain.com

# Profile Default Values (optional)
PROFILE_NAME=Your Name
PROFILE_TITLE=Full Stack Developer
PROFILE_BIO=Passionate developer creating innovative technology solutions.
PROFILE_EMAIL=contact@yourdomain.com
PROFILE_LOCATION=Your Location

# Translation Service (Optional)
TRANSLATION_PROVIDER=libretranslate
TRANSLATION_API_URL=http://libretranslate:5000
TRANSLATION_API_KEY=
